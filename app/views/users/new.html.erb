<h1>Sign up for an account with SeatMyself</h1>
<p>Accurately fill in your information below</p>

<hr/>


<%= form_for @user do |f| %>

  <div class="span6">
    <% unless f.object.errors.empty? %>
      <div class="alert alert-error">
        <strong>Try again after fixing the following errors:</strong><br/>
        <ul>
          <% f.object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
    <%= f.text_field :first_name, placeholder: "first name", class: "input-block-level" %>
    <%= f.text_field :last_name, placeholder: "last name", class: "input-block-level" %>

    <%= f.text_field :email, placeholder: "email address", class: "input-block-level" %>
    <%= f.password_field :password, placeholder: "password", class: "input-block-level" %>

    <div class="form-actions">
      <%= f.submit 'Create Account', class: 'btn btn-primary' %>
    </div>
  </div>

<% end %>
