<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="#">SeatMyself</a>
      <div class="nav-collapse collapse">
        <ul class="nav">
          <li class="<%='active' if current_page? root_path %>">
            <%= link_to 'Home', :root %>
          </li>
          <li class="<%= 'active' if controller_name == 'restaurants' %>">
            <%= link_to 'Restaurants', :restaurants %>
          </li>
        </ul>
      </div>
      <div class="pull-right">
        <% if logged_in? %>
          <%= link_to 'Logout', :session, :method => :delete, class: 'btn' %>
        <% else %>
          <%= link_to 'Sign Up', [:new, :user], class: 'btn btn-primary' %>
          <%= link_to 'Sign In', [:new, :session], class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
</div>